            'manisha mehla': 'jagadish',  # Map to Jagadish
            'pobbati balaji': 'jagadish',  # Map to Jagadish
            'manish kumar sah': 'anil',  # Map to Anil
            'shashank verma': 'anil',  # Map to Anil
